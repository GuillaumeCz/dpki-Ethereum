var program = require('commander');
var keyUtils = require('./keys');
var storageUtils = require('./storage');
var ipfs = require('./ipfs');

program
	.version('0.1.0')

program
	.command('new-key <path>').alias('new')
	.action(keyUtils.newKey);

program
	.command('my-key').alias('me')
	.action(keyUtils.myKey);

program
	.command('key-of <name>').alias('key')
	.option('-f, --file [filePath]', 'The target file to export to')
	.action(keyUtils.keyOf);

program
	.command('save <address> <name>')
	.action(storageUtils.saveRecord);

// Display the value of the file with the requested id
program
  .command('ipfs-cat <id>')
  .action(ipfs.cat);

// Save a file in ipfs
program
  .command('ipfs-save <path>')
  .action(ipfs.saveFile);

program
	.parse(process.argv);
